<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane style="-fx-background-color: #E5E6E8;" stylesheets="@Scene4.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.project123.Scene4Control">
    <!-- Root container for the scene -->
    <ScrollPane fx:id="productScrollPane" layoutX="20.0" layoutY="47.0" prefHeight="497.0" prefWidth="627.0" style="-fx-background-color: #E5E6E8;">
        <!-- VBox to hold the entire category and its products -->
        <content>
            <VBox fx:id="categoryVBox" alignment="TOP_LEFT" spacing="20.0" style="-fx-padding: 10px;">
                <!-- This VBox will dynamically populate with categories and products -->
            </VBox>
        </content>
    </ScrollPane>
   <MenuBar layoutX="1.0" layoutY="1.0" prefHeight="46.0" prefWidth="647.0" style="-fx-background-color: #082036;">
     <menus>
       <Menu mnemonicParsing="false">
            <graphic>
                <Button mnemonicParsing="false" onAction="#changeToScene5" prefHeight="36.0" prefWidth="78.0" style="-fx-background-color: #4B0F0F;" text="Back" />
            </graphic>
       </Menu>
     </menus>
   </MenuBar>
</AnchorPane>
