<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="657.0" prefWidth="600" style="-fx-background-color: #E5E6E8;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.project123.Scene11Control">

    <!-- Add Category Section -->
    <Label layoutX="17.0" layoutY="82.0" text="Category Name:" />
    <TextField fx:id="categoryNameField" layoutX="140.0" layoutY="78.0" prefWidth="200" />

    <Label layoutX="18.0" layoutY="118.0" text="Category ID:" />
    <TextField fx:id="categoryIdField" layoutX="140.0" layoutY="114.0" prefWidth="200" />

    <Button layoutX="137.0" layoutY="155.0" onAction="#addCategory" style="-fx-background-color: #4B0F0F; -fx-text-fill: white;" text="Add Category" />

    <!-- Add Product Section -->
    <Label layoutX="19.0" layoutY="338.0" style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Add Product" />

    <Label layoutX="19.0" layoutY="378.0" text="Product Name:" />
    <TextField fx:id="productNameField" layoutX="140.0" layoutY="374.0" prefWidth="200" />

    <Label layoutX="37.0" layoutY="409.0" text="Price:" />
    <TextField fx:id="productPriceField" layoutX="140.0" layoutY="405.0" prefWidth="200" />

    <Label layoutX="19.0" layoutY="438.0" text="Stock Quantity:" />
    <TextField fx:id="productStockField" layoutX="140.0" layoutY="434.0" prefWidth="200" />

    <Label layoutX="25.0" layoutY="484.0" text="Product Image:" />
    <Button layoutX="155.0" layoutY="480.0" onAction="#uploadProductImage" style="-fx-background-color: #4B0F0F; -fx-text-fill: white;" text="Upload Image" />

    <Label layoutX="28.0" layoutY="525.0" text="Image Path:" />
    <TextField fx:id="imagePathField" editable="false" layoutX="137.0" layoutY="521.0" prefHeight="26.0" prefWidth="287.0" />

    <Label layoutX="41.0" layoutY="562.0" text="Category:" />
    <ComboBox fx:id="categoryComboBox" layoutX="140.0" layoutY="558.0" prefWidth="200" />

    <Button layoutX="159.0" layoutY="594.0" onAction="#addProduct" style="-fx-background-color: #4B0F0F; -fx-text-fill: white;" text="Add Product" />

    <!-- Remove Category Section -->
    <Label layoutX="25.0" layoutY="204.0" style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Remove Category" />

    <Label layoutX="19.0" layoutY="253.0" text="Select Category to Remove:" />
    <ComboBox fx:id="categoryChoiceComboBox" layoutX="195.0" layoutY="249.0" prefWidth="200" />

    <Button layoutX="139.0" layoutY="303.0" onAction="#removeCategory" style="-fx-background-color: #4B0F0F; -fx-text-fill: white;" text="Remove Category" />
    <MenuBar prefHeight="44.0" prefWidth="606.0" style="-fx-background-color: #082036;">
        <menus>
            <Menu mnemonicParsing="false">
                <graphic>
                    <Button mnemonicParsing="false" onAction="#LogoutHandle" style="-fx-background-color: #4B0F0F; -fx-text-fill: white;" text="Log out " />
                </graphic>
            </Menu>
            <Menu mnemonicParsing="false">
                <graphic>
                    <Button mnemonicParsing="false" onAction="#goBackToadminMenu" style="-fx-background-color: #4B0F0F; -fx-text-fill: white;" text="Next" />
                </graphic>
            </Menu>
            <Menu mnemonicParsing="false">
                <graphic>
                    <Button mnemonicParsing="false" onAction="#changeToScene5" style="-fx-background-color: #4B0F0F; -fx-text-fill: white;" text="Back" />
                </graphic>
            </Menu>
        </menus>
    </MenuBar>
    <Label layoutX="32.0" layoutY="44.0" style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Add Category" />
</AnchorPane>
